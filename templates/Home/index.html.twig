{% block body %}


	<section class="">
		<div class="container flex flex-col justify-center p-4 mx-auto md:p-8">
			<h2 class="mb-12 text-4xl font-bold leading-none text-center sm:text-5xl">
				Morpion en ligne
			</h2>

